{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 110
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"bracketSameLine": true,
			"jsxQuoteStyle": "single",
			"arrowParentheses": "always",
			"bracketSpacing": true
		}
	},
	"files": {
		"ignore": [
			"node_modules/**/*",
			"dist/**/*"
		]
	}
}