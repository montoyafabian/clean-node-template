{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["dist/**/*", "node_modules/**/*"]
	},
	"formatter": {
		"lineWidth": 100,
		"ignore": ["dist/**/*", "node_modules/**/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"files": {
		"ignore": ["dist/**/*", "node_modules/**/*"]
	}
}
