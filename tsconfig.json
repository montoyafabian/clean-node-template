{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "allowJs": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["src/*"],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
      }
    ],
  },
  "exclude": ["tests/**/*"],
  "include": ["src/**/*"]
}